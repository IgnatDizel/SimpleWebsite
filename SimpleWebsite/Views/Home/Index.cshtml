<style>
    .mainList {
        list-style: none;
        border-left: 5px solid #999;
        padding: 0;
        font-family: "Lucida Sans";
    }

        .mainList li {
            padding: 10px;
        }

            .mainList li:nth-child(odd) {
                background: #E1F1FF;
            }

            .mainList li:nth-child(even) {
                background: white;
            }

    .itemHome {
        width: 80%;
        font-size: 20px;
        width: 80%;
        margin: auto;
        line-height: 1.5;
        text-decoration: none;
        color: black;
    }
</style>
@model IEnumerable<SimpleWebsite.Models.Article>
@{
    ViewBag.Title = "Home";
}




<ul class="mainList">
    @foreach (var item in Model)
    {
        <li>
            @Html.ActionLink(@item.Title, "Details", "Article", new { Id = item.Id }, new { @class = "itemHome" })
        </li>
    }

</ul>



